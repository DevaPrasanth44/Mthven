pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/DevaPrasanth44/Mthven.git'
            }
        }

        stage('Run Project') {
            steps {
                bat '''
                echo Running project on Windows Jenkins
                dir
                '''
            }
        }
    }

    post {
        success {
            echo '✅ Pipeline executed successfully'
        }
        failure {
            echo '❌ Pipeline failed'
        }
    }
}
